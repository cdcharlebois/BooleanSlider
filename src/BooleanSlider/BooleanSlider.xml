<?xml version="1.0" encoding="utf-8" ?>
<widget id="BooleanSlider.widget.BooleanSlider" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Boolean Slider</name>
    <description>Boolean Slider for replacing the default checkboxes for boolean attributes.</description>

    <icon></icon>

    <properties>
        <property key="dataAttr" type="attribute" required="true" isPath="optional" pathType="reference">
            <caption>Boolean Attribute</caption>
            <category>Data source</category>
            <description>The Boolean attribute.</description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="onChangeMF" type="microflow" required="false">
            <caption>onChange Microflow</caption>
            <category>Behavior</category>
            <description>Microflow to trigger when button is toggled</description>
            <returnType type="Void" />
        </property>
        <property key="displayType" type="enumeration" required="true" defaultValue="android">
            <caption>Display As</caption>
            <category>Customization</category>
            <description>If you choose "auto" the slider will render in the format native to the user's device (Mobile only).</description>
            <enumerationValues>
                <enumerationValue key="android">Android</enumerationValue>
                <enumerationValue key="ios">iOS</enumerationValue>
                <enumerationValue key="auto">auto (Mobile only)</enumerationValue>
            </enumerationValues>
        </property>
        <property key="trueValue" type="translatableString">
            <caption>String value for True</caption>
            <category>Customization</category>
            <description>String value for True</description>
            <translations>
                <translation lang="en_US">Yes</translation>
            </translations>
        </property>
        <property key="falseValue" type="translatableString">
            <caption>String value for False</caption>
            <category>Customization</category>
            <description>String value for False</description>
            <translations>
                <translation lang="en_US">No</translation>
            </translations>
        </property>
        <property key="editable" type="boolean" required="true" defaultValue="true">
            <caption>Editable</caption>
            <category>Editability</category>
            <description>Whether the user is allowed to change the value.</description>
        </property>
    </properties>
</widget>
